@model Getask.Repository.Models.ViewModel.LoginViewModel


<style>

    .formulario-senha{
        margin-bottom: 1rem;
       
    }

    .container-senha {
        background-color: white;
        border-radius: 16px;
        padding: 2rem;
        max-width: 600px;
        margin: auto;
        text-align: center;
    }
    
    .form-group{
        text-align: start !important;
        margin-bottom: 1rem;
    }
</style>

<div class="container-senha">

    <h2>Esqueci a Senha</h2>
    <hr />
        <p>Informe seu e-mail para receber um link de redefinição de senha.</p>
            <form asp-controller="Login" class="formulario-senha" asp-action="EsqueciSenha" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            @if (ViewBag.Mensagem != null)
            {
                <div class="alert alert-info">@ViewBag.Mensagem</div>
            }
            <div class="form-group">
                <label for="Email">Email</label>
                <input type="email" class="form-control" id="Email" name="Email" required>
            </div>
            <br>
            <button type="submit" class="btn btn-primary">Recuperar senha</button>
        </form>
</div>